          "nic2Id": {
            "value": "[resourceId('Microsoft.Network/networkInterfaces', variables('nic2Name'))]"
          },
          "diagsStorageUri": {
            "value": "[reference(resourceId('Microsoft.Storage/storageAccounts', variables('diagStorageAccountName'))).primaryEndpoints.blob]"
          }
        },
        "template": {
