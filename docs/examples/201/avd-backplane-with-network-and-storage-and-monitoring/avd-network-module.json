  },
  "parameters": {
    "vnetName": {
      "type": "string"
    },
    "vnetaddressPrefix": {
      "type": "string"
    },
    "subnetPrefix": {
      "type": "string"
    },
    "vnetLocation": {
      "type": "string",
      "defaultValue": "westeurope"
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "AVD"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2019-12-01",
