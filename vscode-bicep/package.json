{
    "name": "vscode-bicep",
    "description": "VSCode part of a language server",
    "author": "Microsoft Corporation",
    "license": "MIT",
    "version": "0.0.1",
    "publisher": "vscode",
    "engines": {
        "vscode": "^1.8.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:plaintext"
    ],
    "main": "./out/extension",
    "enableProposedApi": true,
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "bicep.maxNumberOfProblems": {
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "bicep.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "verbose",
                    "description": "Traces the communication between VSCode and the bicep service."
                }
            }
        },
        "languages": [
            {
                "id": "bicep",
                "aliases": [
                    "Bicep",
                    "bicep"
                ],
                "extensions": [
                    ".arm"
                ]
            }
        ],
        "grammars": [
            {
                "language": "bicep",
                "scopeName": "source.bicep",
                "path": "./bicep.grammar.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.1",
        "typescript": "^3.8.3",
        "vscode": "^1.1.36"
    },
    "dependencies": {
        "vscode-languageclient": "^6.2.0-next.2"
    }
}
