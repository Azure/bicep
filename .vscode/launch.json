{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Bicep Web Demo",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": ["run", "${workspaceFolder}/src/Bicep.WebDemo/bin/Debug/netstandard2.1/Bicep.WebDemo.dll"],
            "cwd": "${workspaceFolder}/src/Bicep.WebDemo",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(http://\\S+)"
            },
        },
        {
            "name": "Bicep.Cli",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Bicep.Cli/bin/Debug/netcoreapp3.1/Bicep.Cli.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Bicep.Cli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}