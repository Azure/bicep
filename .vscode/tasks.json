{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Bicep.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-cli",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Bicep.Cli/Bicep.Cli.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-langserver",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Bicep.LangServer/Bicep.LangServer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "vscodeext-build",
            "command": "npm",
            "args": ["run", "compile", "--loglevel", "silent"],
            "type": "shell",
            "problemMatcher": "$tsc-watch",
            "options": {
                "cwd": "${workspaceFolder}/src/vscode-bicep"
            },
            "dependsOn": [
                "build-langserver"
            ]
        },
        {
            "label": "playground-build-wasm",
            "command": "npm",
            "args": ["run", "build-wasm"],
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/playground"
            }
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Bicep.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}