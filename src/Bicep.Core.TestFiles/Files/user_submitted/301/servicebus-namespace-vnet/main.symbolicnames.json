  "parameters": {
    "serviceBusNamespaceName": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "subnetName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
