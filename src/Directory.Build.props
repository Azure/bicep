<Project>
  <PropertyGroup>
    <Deterministic>true</Deterministic>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <!-- Turn on nuget package lock files for repeatable builds -->
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>

    <!-- Restore in locked mode when running under GitHub actions (GitHub actions sets the CI environment variable to true) -->
    <RestoreLockedMode Condition=" '$(CI)' == 'true' ">true</RestoreLockedMode>
    
    <!-- disable extra sources -->
    <DisableImplicitNuGetFallbackFolder>true</DisableImplicitNuGetFallbackFolder>

    <!-- workaround for dotnet publish failures when using package lock files -->
    <TargetLatestRuntimePatch>true</TargetLatestRuntimePatch>

    <!-- 
      list of runtime identifiers we use for projects targeting multiple runtimes
      must match the matrix settings in build.yml
    -->
    <BicepRuntimeIdentifiers>win-x64;linux-x64;osx-x64</BicepRuntimeIdentifiers>
  </PropertyGroup>
</Project>