  },
  "dependencies": {
    "cytoscape": "^3.20.0",
    "cytoscape-elk": "^2.0.2",
    "fs-extra": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "styled-components": "^5.3.1",
    "triple-beam": "^1.3.0",
