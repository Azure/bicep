{
  "name": "vscode-bicep",
  "displayName": "Bicep",
  "description": "Bicep language support for Visual Studio Code",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "version": "0.0.0-placeholder",
  "publisher": "ms-azuretools",
  "icon": "icons/bicep-logo-256.png",
  "preview": false,
  "aiKey": "AIF-d9b70cd4-b9f9-4d70-929b-a071c400b217",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Azure",
    "Programming Languages"
  ],
  "keywords": [
    "Bicep",
    "Azure Resource Manager",
    "ARM Template",
    "Azure"
  ],
  "bugs": {
    "url": "https://github.com/Azure/bicep/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Azure/bicep.git"
  },
  "galleryBanner": {
    "color": "E7F1FA",
    "theme": "light"
  },
  "homepage": "https://github.com/Azure/bicep/blob/main/README.md",
  "$activationEvents.comment": "asdfg",
  "activationEvents": [
    "onLanguage:bicep",
    "onCommand:bicep.build",
    "onCommand:bicep.insertResource",
    "onCommand:bicep.showSource",
    "onCommand:bicep.showVisualizer",
    "onCommand:bicep.showVisualizerToSide",
    "onCommand:bicep.gettingStarted.createBicepFile",
    "onCommand:bicep.gettingStarted.openBicepFile",
    "onCommand:bicep.gettingStarted.openVisualizer",
    "onWebviewPanel:bicep.visualizer"
  ],
  "main": "./out/extension",
  "enableProposedApi": true,
  "contributes": {
    "configurationDefaults": {
      "[bicep]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "files.insertFinalNewline": true,
        "editor.suggestSelection": "first",
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggest.showWords": false
      }
    },
    "configuration": {
      "type": "object",
      "title": "Bicep",
      "properties": {
        "bicep.trace.server": {
          "type": "string",
          "enum": [
            "Off",
            "Messages",
            "Verbose"
          ],
          "default": "Off",
          "description": "Configure tracing of messages sent to the Bicep language server.",
          "scope": "window"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "bicepconfig.json",
        "url": "./schemas/bicepconfig.schema.json"
      }
    ],
    "languages": [
      {
        "id": "bicep",
        "aliases": [
          "Bicep",
          "bicep"
        ],
        "extensions": [
          ".bicep"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "jsonc",
        "filenames": [
          "bicepconfig.json"
        ]
      }
    ],
    "grammars": [
      {
        "scopeName": "markdown.bicep.codeblock",
        "path": "./syntaxes/bicep.codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.bicep": "bicep"
        }
      },
      {
        "language": "bicep",
        "scopeName": "source.bicep",
        "path": "./syntaxes/bicep.tmlanguage"
      }
    ],
    "commands": [
      {
        "command": "bicep.showVisualizer",
        "title": "Open Visualizer",
        "category": "Bicep",
        "icon": "$(type-hierarchy-sub)"
      },
      {
        "command": "bicep.showVisualizerToSide",
        "title": "Open Visualizer to the Side",
        "category": "Bicep",
        "icon": "$(type-hierarchy-sub)"
      },
      {
        "command": "bicep.showSource",
        "title": "Open Source",
        "category": "Bicep",
        "icon": "$(go-to-file)"
      },
      {
        "command": "bicep.build",
        "title": "Build",
        "category": "Bicep"
      },
      {
        "command": "bicep.insertResource",
        "title": "Insert Resource",
        "category": "Bicep"
      },
      {
        "$section": "================== Walkthrough commands ==================",
        "command": "bicep.gettingStarted.createBicepFile",
        "title": "Create Empty Bicep File"
      },
      {
        "command": "bicep.gettingStarted.openBicepFile",
        "title": "Create Empty Bicep File"
      },
      {
        "command": "bicep.gettingStarted.openVisualizer",
        "title": "Open Visualizer to the Side"
      }
    ],
    "keybindings": [
      {
        "command": "bicep.build",
        "key": "ctrl+shift+b",
        "mac": "cmd+alt+b",
        "when": "resourceLangId == bicep"
      },
      {
        "command": "bicep.showVisualizerToSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "resourceLangId == bicep && commandsRegistered"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "bicep.showVisualizerToSide",
          "when": "editorLangId == bicep && commandsRegistered",
          "alt": "bicep.showVisualizer",
          "group": "navigation"
        },
        {
          "command": "bicep.showSource",
          "when": "bicepVisualizerFocus && commandsRegistered",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "bicep.showVisualizer",
          "when": "resourceLangId == bicep && commandsRegistered",
          "group": "navigation"
        },
        {
          "command": "bicep.showVisualizerToSide",
          "when": "resourceLangId == bicep && commandsRegistered",
          "group": "navigation"
        },
        {
          "command": "bicep.build",
          "when": "resourceLangId == bicep && commandsRegistered",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "bicep.showVisualizer",
          "when": "resourceLangId == bicep && commandsRegistered",
          "group": "1_open"
        },
        {
          "command": "bicep.showVisualizerToSide",
          "when": "resourceLangId == bicep && commandsRegistered",
          "group": "1_open"
        },
        {
          "command": "bicep.build",
          "when": "resourceLangId == bicep && commandsRegistered",
          "group": "1_build"
        }
      ],
      "editor/context": [
        {
          "command": "bicep.showVisualizer",
          "when": "resourceLangId == bicep && commandsRegistered",
          "group": "1_open"
        },
        {
          "command": "bicep.showVisualizerToSide",
          "when": "resourceLangId == bicep && commandsRegistered",
          "group": "1_open"
        }
      ],
      "commandPalette": [
        {
          "command": "bicep.build",
          "when": "editorLangId == bicep && commandsRegistered",
          "group": "navigation"
        },
        {
          "command": "bicep.insertResource",
          "when": "editorLangId == bicep && commandsRegistered",
          "group": "navigation"
        },
        {
          "command": "bicep.showVisualizer",
          "when": "editorLangId == bicep && commandsRegistered",
          "group": "navigation"
        },
        {
          "command": "bicep.showVisualizerToSide",
          "when": "editorLangId == bicep && commandsRegistered",
          "group": "navigation"
        },
        {
          "command": "bicep.showSource",
          "when": "bicepVisualizerFocus && commandsRegistered",
          "group": "navigation"
        },
        {
          "command": "bicep.gettingStarted.createBicepFile",
          "when": "never"
        },
        {
          "command": "bicep.gettingStarted.openBicepFile",
          "when": "never"
        },
        {
          "command": "bicep.gettingStarted.openVisualizer",
          "when": "never"
        }
      ]
    },
    "walkthroughs.$comments": [
      "Documentation: https://code.visualstudio.com/api/references/contribution-points#contributes.walkthroughs",
      "",
      "Automatically completes if a markdown button is pressed or there are no commands and no completion events",
      "Available completion events include:",
      "  onCommand:myCommand.id: Check off step when a command has been run.",
      "  onSettingChanged:mySetting.id: Check off step once the given setting has been modified.",
      "  onContext:contextKeyExpression: Check off step when a context key expression evaluates true.",
      "  extensionInstalled:myExt.id: Check off step if the given extension is installed.",
      "  onView:myView.id: Check off step once a given view becomes visible.",
      "  onLink:https://...: Check off step once a given link has been opened via a Walkthrough."
    ],
    "walkthroughs": [
      {
        "id": "gettingStarted",
        "title": "Getting Started with Bicep",
        "description": "Learn about Bicep and the Bicep extension for Visual Studio Code",
        "steps": [
          {
            "id": "openBicepFile",
            "title": "Open a Bicep File",
            "description": "To get started with Bicep extension features, open or create a Bicep file (any file with '.bicep' extension).\n[Open Bicep file](command:bicep.gettingStarted.openBicepFile)\n[Create Bicep file](command:bicep.gettingStarted.createBicepFile)\nHint: [Close the side bar for more space](command:workbench.action.closeSidebar)",
            "media": {
              "image": "media/walkthroughs/gettingStarted/1_BicepLogoImage.png",
              "altText": "Bicep logo"
            },
            "completionEvents": [
              "onCommand:bicep.gettingStarted.createBicepFile",
              "onCommand:bicep.gettingStarted.openBicepFile"
            ]
          },
          {
            "id": "writeFirstFile",
            "title": "Write your first file",
            "description": "Use Bicep's IntelliSense and snippets to help you create a deployable Bicep file in minutes\n\nLet's author multiple Azure resources with Bicep.",
            "media": {
              "image": "media/walkthroughs/gettingStarted/2_Type_Params.gif",
              "altText": "asdfg"
            },
            "completionEvents": []
          },
          {
            "id": "addParameters",
            "title": "Add parameters",
            "description": "First, create a parameter named 'location'. Next, create a parameter named 'appPlanName'. These parameters will be used to fill attributes in your resources.\nYour code should looke like this:\n``param location string = resourceGroup().location``\n``param appPlanName string``",
            "media": {
              "image": "media/walkthroughs/gettingStarted/2_Type_Params.gif",
              "altText": "asdfg"
            },
            "completionEvents": []
          },
          {
            "id": "addResources",
            "title": "Add resources",
            "description": "Type 'appplan' to view the 'App Service Plan' resource snippet and press Tab or Enter. Press Tab to jump to the ``name`` attribute and replace its value with the parameter ``appPlanName``. Next, type 'storage' to view a 'Storage Account' resource snippet and press Tab or Enter. Replace the name attribute's value with ``'${appServicePlan.name}storage'`` and save the file. Feel free to search for other snippets that suit your needs.",
            "media": {
              "image": "media/walkthroughs/gettingStarted/3_Type_Resos.gif",
              "altText": "asdfg"
            },
            "completionEvents": []
          },
          {
            "id": "visualizeYourResources",
            "title": "Visualize your resources",
            "description": "The Visualizer gives you a representation of the resources in your Bicep file. In this example, `storageaccount` has an arrow towards `appServicePlan` because it depends on the name you declare for the App Service plan during deployment.\n[Open Visualizer to the Side](command:bicep.gettingStarted.openVisualizer)",
            "media": {
              "image": "media/walkthroughs/gettingStarted/4_Show_Visualizer.gif",
              "altText": "TODO"
            },
            "completionEvents": [
              "onCommand:bicep.showVisualizerToSide",
              "onCommand:bicep.showVisualizer"
            ]
          },
          {
            "id": "deployToAzure",
            "title": "Deploy to Azure",
            "description": "It's time to get these resources in Azure. If you don't have the [Azure Account Extension](https://marketplace.visualstudio.com/items?itemName=ms-vscode.azure-account) installed, you will need it to complete this step.\n[Deploy](command:bicep.deploy)",
            "media": {
              "image": "media/walkthroughs/gettingStarted/5_Deploy.gif",
              "altText": "TODO"
            },
            "completionEvents": [
              "onCommand:bicep.deploy"
            ]
          },
          {
            "id": "writeFirstFile2",
            "title": "Write your first file",
            "description": "Use Bicep's IntelliSense and snippets to help you create a deployable Bicep file in minutes\n\nLet's author multiple Azure resources with Bicep.",
            "media": {
              "markdown": "Use Bicep's IntelliSense and snippets to help you create a deployable Bicep file in minutes\n\nLet's author multiple Azure resources with Bicep. ![media/walkthroughs/gettingStarted/2_Type_Params.gif](media/walkthroughs/gettingStarted/2_Type_Params.gif)"
            },
            "completionEvents": []
          },
          {
            "id": "learnMore",
            "title": "Learn More",
            "description": "Great Job! You've completed Getting Started with Bicep. But don't stop now!\nCheck out our [Bicep Documentation](https://aka.ms/Bicep) to learn more about importing Bicep files as [modules](https://aka.ms/bicep/docs/modules) and [other extension features](https://aka.ms/bicep/docs/vscode).\nWanna take a deep dive into the Bicep language? Take a look at [Microsoft Learn - Bicep](https://aka.ms/microsoftlearnbicep).",
            "media": {
              "image": "media/walkthroughs/gettingStarted/1_BicepLogoImage.png",
              "altText": "Bicep logo"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build:prod",
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build:e2e": "tsc -p ./tsconfig.e2e.json",
    "watch": "webpack --watch --mode development --stats=minimal",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test:e2e": "node ./out/test/e2e/runTests.js",
    "test:unit": "jest --config jest.config.unit.js",
    "test:snapshot": "jest --config jest.config.snapshot.js",
    "test:update-snapshot": "jest --config jest.config.snapshot.js --updateSnapshot",
    "clean": "rimraf ./out ./coverage",
    "package": "npm run clean && nbgv-setversion && vsce package --githubBranch main --out ./vscode-bicep.vsix && nbgv-setversion --reset"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/cytoscape": "^3.14.19",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.12",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.9",
    "@types/react-test-renderer": "^17.0.1",
    "@types/semver": "^7.3.9",
    "@types/styled-components": "^5.1.21",
    "@types/triple-beam": "^1.3.2",
    "@types/vscode": "^1.52.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@vscode/test-electron": "^2.1.2",
    "copy-webpack-plugin": "^9.0.1",
    "esbuild-loader": "^2.16.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "fork-ts-checker-webpack-plugin": "^6.3.3",
    "jest": "^27.3.1",
    "jest-styled-components": "^7.0.5",
    "ncp": "^2.0.0",
    "nerdbank-gitversioning": "^3.4.244",
    "prettier": "^2.4.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "svg-inline-loader": "^0.8.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "vsce": "^1.99.0",
    "webpack": "^5.69.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "cytoscape": "^3.20.0",
    "cytoscape-elk": "^2.0.2",
    "fs-extra": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "styled-components": "^5.3.1",
    "triple-beam": "^1.3.0",
    "vscode-azureextensionui": "^0.49.2",
    "vscode-languageclient": "^7.0.0",
    "winston": "^3.5.1",
    "winston-transport": "^4.4.0"
  },
  "extensionDependencies": [
    "ms-dotnettools.vscode-dotnet-runtime"
  ]
}