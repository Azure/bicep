{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "ES2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "out",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
