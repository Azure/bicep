{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "languageVersion": "1.9-experimental",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "EXPERIMENTAL_WARNING": "Symbolic name support in ARM is experimental, and should be enabled for testing purposes only. Do not enable this setting for any production usage, or you may be unexpectedly broken at any time!",
    "_generator": {
      "name": "bicep",
      "version": "dev",
      "templateHash": "17604191896133774954"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "aseName": {
      "type": "string"
    },
    "internalLoadBalancingMode": {
      "type": "string",
      "defaultValue": "Web,Publishing",
      "allowedValues": [
        "None",
        "Publishing",
        "Web",
        "Web,Publishing"
      ]
    },
    "dnsSuffix": {
      "type": "string"
    },
    "websiteName": {
      "type": "string"
    },
    "appServicePlanName": {
      "type": "string"
    },
    "numberOfWorkers": {
      "type": "int",
      "defaultValue": 1
    },
    "workerPool": {
      "type": "string",
      "defaultValue": "1",
      "allowedValues": [
        "1",
        "2",
        "3"
      ]
    }
  },
  "resources": {
    "virtualNetwork": {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-06-01",
      "name": "vnet-01",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        }
      }
    },
    "subnet": {
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "apiVersion": "2020-06-01",
      "name": "[format('{0}/subnet-01', resourceInfo('virtualNetwork').name)]",
      "properties": {
        "addressPrefix": "10.0.1.0/24"
      },
      "dependsOn": [
        "virtualNetwork"
      ]
    },
    "hostingEnvironment": {
      "type": "Microsoft.Web/hostingEnvironments",
      "apiVersion": "2020-06-01",
      "name": "[parameters('aseName')]",
      "location": "[parameters('location')]",
      "kind": "ASEV2",
      "properties": {
        "name": "[parameters('aseName')]",
        "location": "[parameters('location')]",
        "ipsslAddressCount": 0,
        "internalLoadBalancingMode": "[parameters('internalLoadBalancingMode')]",
        "dnsSuffix": "[parameters('dnsSuffix')]",
        "virtualNetwork": {
          "id": "[resourceInfo('virtualNetwork').id]",
          "subnet": "[resourceInfo('subnet').name]"
        },
        "workerPools": []
      },
      "dependsOn": [
        "subnet",
        "virtualNetwork"
      ]
    },
    "serverFarm": {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-06-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "properties": {
        "hostingEnvironmentProfile": {
          "id": "[resourceInfo('hostingEnvironment').id]"
        }
      },
      "sku": {
        "name": "[format('I{0}', parameters('workerPool'))]",
        "tier": "Isolated",
        "size": "[format('I{0}', parameters('workerPool'))]",
        "family": "I",
        "capacity": "[parameters('numberOfWorkers')]"
      },
      "dependsOn": [
        "hostingEnvironment"
      ]
    },
    "website": {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2020-06-01",
      "name": "[parameters('websiteName')]",
      "location": "[parameters('location')]",
      "properties": {
        "serverFarmId": "[resourceInfo('serverFarm').id]",
        "hostingEnvironmentProfile": {
          "id": "[resourceInfo('hostingEnvironment').id]"
        }
      },
      "dependsOn": [
        "hostingEnvironment",
        "serverFarm"
      ]
    }
  }
}