name: PR Compliance

on:
  pull_request:
    branches:
      - main
    types:
      - opened
      - labeled
      - unlabeled

jobs:
  check-for-docs-label:
    if: ${{ contains(github.event.pull_request.labels.*.name, 'ğŸ“˜ Docs Needed') || contains(github.event.pull_request.labels.*.name, 'ğŸ“˜ Docs Not Needed') || contains(github.event.pull_request.labels.*.name, 'dependencies') }}
    runs-on: ubuntu-latest
    steps:
      - name: Missing docs label
        run: |
          echo "Please either use the 'ğŸ“˜ Docs Needed' or 'ğŸ“˜ Docs Not Needed' label"
          exit 1
